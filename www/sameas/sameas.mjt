<acre:block def="page_content()">

  ${topic_keys(c.keys)}

</acre:block>

<acre:block def="topic_keys(keys)">
  <h1 class="table-title">${_("Topic Keys")} ( ${i18n_c.number(keys.length)} )</h1>
  <table cellspacing="0" class="table table-sortable">  
     <thead>
      <tr>
        <th class="column-header first {sorter:'string'}" scope="column"> 
          <span class="sort-icon">${_("Authority")}</span>
        </th>
        <th class="column-header {sorter:'string'}" scope="column">
          <span class="sort-icon">${_("Namespace")}</span>
        </th>
        <th class="column-header {sorter:'string'}" scope="column">
          <span class="sort-icon">${_("Key")}</span>
        </th>
        <th class="column-header {sorter:'string'}" scope="column">
          <span class="sort-icon">${_("Creator")}</span>
        </th>
        <th class="column-header {sorter:'datetime'}" scope="column">
          <span class="sort-icon">${_("Date")}</span>
        </th>
      </tr>
    </thead>
     <tbody>
       <acre:block for="key in keys">
         ${topic_key(key)}
       </acre:block>
     </tbody>
  </table>
</acre:block>

<acre:block def="topic_key(key)">
  <tr>
    <th class="row-header odd">
      <acre:block if="key.authority">
        <span class="authority a${key.authority.id.replace(/\//g, '-')}">
          <a href="${h.fb_url(key.authority.id)}">
            <strong>${i18n.display_name(key.authority)}</strong>
          </a>  
        </span>
      </acre:block>
      <acre:block else="">
        <strong>-</strong>
      </acre:block>
    </th>
    <td>
      <a href="${h.fb_url(key.ns)}">${key.ns}</a>
    </td>
    <td class="odd">
      <acre:block if="key.url">
        <a href="${key.url}">${key.key}</a>
      </acre:block>
      <acre:block else="">
        ${key.key}
      </acre:block>
    </td>
    <td>
      <a href="${h.fb_url(key.creator.id)}">${i18n.display_name(key.creator)}</a>
    </td>
    <td>
      ${i18n_c.datetime(key.timestamp)}
    </td>
  </tr>
</acre:block>


<acre:block def="external_topics()">
    <h1 class="table-title">${_("External Topic IDs")}</h1>
    <table cellspacing="0" class="table">
      <thead>
      </thead>
      <acre:block for="authority in c.weblinks.authorities">
        <thead>
          <tr>
            <th colspan="2" class="tbody-header expanded first">
              <span class="authority a${authority.id.replace(/\//g, '-')}">
                <acre:block if="authority.id !== '_NO_AUTHORITY'">
                <a href="${h.fb_url(authority.id)}">
                  <strong>${i18n.display_name(authority)}</strong>
                </a>  
                </acre:block>
                <acre:block else="">
                  <strong>${_("Unknown")}</strong>
                <acre:block>
              </span>
            </th>
          </tr>
          <tr>
            <th class="column-header first" scope="column">
              <span class="sort-icon">${_("Namespace")}</span>
            </th>
            <th class="column-header" scope="column">
              <span class="sort-icon">${_("Key")}</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr acre:for="weblink in authority.weblinks">
            <th class="row-header odd">
              <a href="${h.fb_url(weblink.ns)}">${weblink.ns}</a>
            </th>
            <td>
              <a href="${weblink.url}">${weblink.key}</a>
            </td>
          </tr>
        </tbody>
      </acre:block>
    </table>
</acre:block>

<acre:block def="external_topics2()">

  <h1 class="table-title">${_("External Topic IDs (Collapsed)")}</h1>

  <table cellspacing="0" class="table table-sortable">
    <thead>
      <tr>
        <th class="column-header first {sorter:'string'}" scope="column"> 
          <span class="sort-icon">${_("Authority")}</span>
        </th>
        <th class="column-header {sorter:'string'}" scope="column">
          <span class="sort-icon">${_("Namespace")}</span>
        </th>
        <th class="column-header {sorter:'string'}" scope="column">
          <span class="sort-icon">${_("Key")}</span>
        </th>
      </tr>
    </thead>
    <tbody>
      <acre:block for="authority in c.weblinks.authorities">
        <acre:block for="weblink in authority.weblinks">
          <tr>
            <th class="row-header odd">
              <acre:block if="authority.id === '_NO_AUTHORITY'">
                <strong>-</strong>                 
              </acre:block>
              <acre:block else="">
                <span class="authority a${authority.id.replace(/\//g, '-')}">
                  <acre:block if="authority.id !== '_NO_AUTHORITY'">
                    <a href="${h.fb_url(authority.id)}">
                      <strong>${i18n.display_name(authority)}</strong>
                    </a>  
                </span>
              </acre:block>
            </th>
            <td>
              <a href="${h.fb_url(weblink.ns)}">${weblink.ns}</a>
            </td>
            <td class="odd">
              <a href="${weblink.url}">${weblink.key}</a>
            </td>
          </tr>
        </acre:block>
      </acre:block>
    </tbody>
  </table>
</acre:block>

<acre:block def="webpages()">
  <h1 class="table-title">${_("Related Webpages")}</h1>
  <table cellspacing="0" class="table table-sortable">
    <thead>
      <th class="column-header first" scope="column">
        <span class="sort-icon">${_("URI")}</span>
      </th>
      <th class="column-header" scope="column">
        <span class="sort-icon">${_("Title")}</span>
      </th>
      <th class="column-header" scope="column">
        <span class="sort-icon">${_("Category")}</span>
      </th>
    </thead>
    <tbody>
      <tr acre:for="weblink in c.weblinks.webpages">
        <th class="row-header odd">
          <a href="${weblink.url}" rel="external" title="${_('Go to webpage')}">$weblink.url</a>
        </th>
        <td><a href="${h.fb_url(weblink.ns)}"></a></td>
        <td class="odd">
          <acre:block if="weblink.category && weblink.category.name.length">
            ${i18n.display_name(weblink.category)}
          </acre:block>
        </td>
      </tr>
    </tbody>
  </table>
</acre:block>


<acre:block def="footer_script()">
  <script src="http://freebaselibs.com/static/freebase_site/static/jquery.tablesorter.js"></script>
</acre:block>
