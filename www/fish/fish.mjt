<acre:script>
  var c = this.exports.c = {};
  var h = acre.require("lib/helper/helpers.sjs");
  var image = acre.require("lib/template/imagecomponents");
  var i18n = acre.require("lib/i18n/i18n.sjs");
  var _ = i18n.gettext;
</acre:script>

<acre:block def="head()">
  <link rel="stylesheet" type="text/css" href="fish.mf.css" />
</acre:block>

<acre:block def="page_content()">

  <acre:block if="c.keys && c.keys.length">
    <h1 class="table-title">${_("Web IDs")}</h1>
    <table cellspacing="0" class="table">
      <acre:block acre:for="authority in c.keys">
        <acre:script>
          var class_name;
          var separator = "/";
          class_name = "a" + authority.id.replace("/", "-", "g");
        </acre:script>
        <thead class="">
          <tr>
            <th colspan="2" class="tbody-header expanded">
              <span class="authority $class_name">
                <a acre:if="authority.best_url" href="$authority.best_url">
                  $authority.name
                </a>
                <span acre:else="">
                  $authority.name
                </span>
                <span>(${authority.total_keys})</span>
              </span>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="col" class="column-header first" style="text-align:right">${_("Namespace")}</th>
            <th scope="col" class="column-header">${_("Key")}</th>
          </tr>
          <tr acre:for="ns in authority.namespaces">
            <th class="odd row-header" style="text-align:right">
              ${ns.id}
            </th>
            <td class="even">
              <acre:block for="i, key in ns.keys" trim="1">
                <acre:block if="i !== 0">, </acre:block>
                <a href="$key.url">$key.key</a>
              </acre:block>
            </td>
          </tr>
        </tbody>
      </acre:block>
    </table>
  </acre:block>

  <acre:block if="c.weblinks && c.weblinks.length">
    <h1 class="table-title">${_("Related Websites")}</h1>
    <table cellspacing="0" class="table">
      <tbody>
        <tr acre:for="weblink in c.weblinks">
          <th class="row-header">
            <a href="$weblink.url">${weblink.description || weblink.url}</a>
          </th>
        </tr>
      </tbody>
    </table>
  </acre:block>

  <acre:block if="c.images && c.images.length">
  <h1 class="table-title">${_("Images")}</h1>
  <div class="image-stack">
 
    <acre:script>
      var img_count = c.images.length
    </acre:script>
    <acre:block for="i, img in c.images" if="i < 50">
      <a href="javascript:void(0)" class="img-stack-item">
        ${image.image_thumb(img.id, 110)}
      </a>
    </acre:block>
  </div>
  <table cellspacing="0" class="table">
    <thead>
      <th scope="col" class="column-header">${_("Image")}</th>
      <th scope="col" class="column-header">${_("Name")}</th>
      <th scope="col" class="column-header">${_("Added by")}</th>
      <th scope="col" class="column-header">${_("Rights holder")}</th>
      <th scope="col" class="column-header">${_("License")}</th>
    </thead>
    <tbody>
      <tr acre:for="img in c.images">
        <th class="row-header image odd" scope="row">
          ${image.image_thumb(img.id)}
        </th>
        <td class="even">
          $img.name
        </td>
        <td class="odd">
          <a href="${h.fb_url('/view' + img.creator.id)}" title="View user">
            $img.creator.name
          </a>
        </td>
        <td class="even">
          <acre:block if="img.rights_holder">
            $img.rights_holder
          </acre:block>
        </td>
        <td class="odd">
          <acre:block for="i, license in img.license" trim="1">
            <acre:block if="i !== 0">, </acre:block>
            ${license.name}
          </acre:block>
          <acre:block if="!img.license.length">
            Public domain
          </acre:block>
        </td>
      </tr>
    </tbody>
  </table>
  </acre:block>


</acre:block>

<acre:block def="query_link(key, ns)">
  <acre:script>
    var query;
    if (ns === '/m') {
      query = [{
        id: null,
        name: null,
        mid: '/m/'+key
      }];
    } else {
      query = [{
        id: null,
        name: null,
        key: {
          value: key,
          namespace: ns
        }
      }];
    }
  </acre:script>
  (<a href="/queryeditor?q=${JSON.stringify(query)}">Q</a>)
</acre:block>

<acre:block def="footer_script()">
  <script src="fish.mf.js"></script>
</acre:block>
