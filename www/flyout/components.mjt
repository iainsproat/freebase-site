<acre:script>
  var h = acre.require("lib/helper/helpers.sjs");
</acre:script>

<acre:block def="render_flyout(id, lang, flyout)">
  <acre:script>
    var image_class = flyout.image ? "fbs-flyout-image-true" : "";
  </acre:script>
  <div class="fbs-flyout-content">
    <acre:block if="flyout.image">
      <acre:script>
        var image_params = {maxwidth:75};
      </acre:script>
      <img id="fbs-topic-image" class="${image_class}"
               src="${h.image_url(flyout.image, image_params)}"/>
    </acre:block>
    <h1 id="fbs-flyout-title"
        class="${image_class}">
      ${flyout.name}
      <acre:block if="flyout.label">
        <span class="fbs-flyout-template-label">${flyout.label}</span>
      </acre:block>
    </h1>

    <acre:block for="prop in flyout.summary">
      <acre:block if="prop.length === 1">
        <h3 class="fbs-topic-properties ${image_class}">
          <strong>${prop[0]}</strong>
        </h3>
      </acre:block>
      <acre:block elif="prop.length === 2">
        <h3 class="fbs-topic-properties ${image_class}">
          <strong>${prop[0]}:</strong>
          <acre:block if="h.isArray(prop[1])">
            ${prop[1].join(", ")}
          </acre:block>
          <acre:block else="">
            ${prop[1]}
          </acre:block>
        </h3>
      </acre:block>
    </acre:block>

    <acre:block if="flyout.article">
      <p class="fbs-topic-article ${image_class}">
        ${flyout.article.substring(0, 250)}&hellip;
      </p>
    </acre:block>
      
  </div>

  <div class="fbs-attribution">
    <acre:block if="flyout.notability">
      <span class="fbs-flyout-types">
        ${flyout.notability}
      </span>
    </acre:block>
  </div>
</acre:block>
