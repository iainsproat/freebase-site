<acre:script>
  var h = acre.require("lib/helper/helpers.sjs");
  var c = this.exports.c = {};
</acre:script>

<acre:block def="title()">
  Connecting account
</acre:block>

<acre:block def="head()">
  <link rel="stylesheet" type="text/css" href="account.mf.css" />
</acre:block>

<acre:block def="content_body()">
  <acre:script>
    var token = '';
    // Only include the token if we got it all.
    if (c.token && c.token.length > 25) {
       token = c.token;
    }
  </acre:script>
  <div id="claim-content">
    <h1>Connect account</h1>
    <p>Your Freebase account will be connected to your Google account.</p>
    <form name="claim-account"
          method="post"
          action="${h.ajax_url('/claim_submit')}"
      <fieldset>
        <label for="token">Change request code from email:</label>
        <div class="form-field clear">
          <input name="token" class="input-standard" id="claim-token"
                 type="text" spellcheck="false" value="${token}">
          <script acre:if="!token" type="text/javascript">
            document.getElementById("claim-token").focus();
          </script>
          <span class="input-help">
            Make sure that the entire code is included.
          </span>
          <span class="input-error"></span>
        </div>
      </fieldset>
      <button class="submit button button-primary"
              name="claim" type="submit">
        Connect my Account
      </button>
    </form>
  </div>
</acre:block>

<acre:block def="footer_script()">
  <script src="claim.mf.js"></script>
</acre:block>
