<acre:script>
  var c = this.exports.c = {};
  var h = acre.require("lib/helper/helpers.sjs");
  var image = acre.require("lib/template/imagecomponents");  
  var i18n = acre.require("lib/i18n/i18n");
  var _ = i18n.gettext;
  var filter_components = acre.require("lib/filter/components.mjt");
</acre:script>

<acre:block def="head()">
  <link rel="stylesheet" type="text/css" href="topic.mf.css" />
</acre:block>

<acre:block def="title()">
  ${_('Topic')} - ${c.object.name}
</acre:block>

<acre:block def="nav_utilities()">
  <acre:block if="c.object">
    <li>
      <a href="${h.wiki_url('discuss', c.object.mid)}" class="icon-link">
        <span class="browse-icon">${_('Discuss Topic')}</span>
      </a>
    </li>
    <li>
      <a href="${h.wiki_url('discuss', c.object.mid)}" class="icon-link">
        <span class="flag-icon">${_('Flag Topic')}</span>
      </a>
    </li>
  </acre:block>
</acre:block>

<acre:block def="page_content()">
  <div class="column nav">
    <div class="module">
      <h2 class="module-title">
        <a href="javascript:void(0);" class="trigger">Collapse column</a>
        <span>Filter this data</span>
      </h2>
      <div class="module-section" acre:if="c.prop_counts">
        <acre:script>
          var hide_counts = c.filters.as_of_time;
        </acre:script>
        ${filter_components.prop_counts_filter("/topic" + c.id, c.filters, c.prop_counts, hide_counts)}
      </div>
      <div class="module-section">
        ${filter_components.lang_filter("/topic" + c.id, c.filters)}
      </div>
      <div class="module-section">
        ${filter_components.as_of_time_filter("/topic" + c.id, c.filters)}
      </div>
    </div>
    <div class="module">
      <div class="module-section alt" id="limit-slider">    
        <acre:script>
          var limit = c.filters.limit || 10;
        </acre:script>
        <h3 class="module-section-title">
          <label for="">Show up to <strong class="current-limit">${limit}</strong> properties</label>
        </h3>
        ${filter_components.filter_form("/topic" + c.id, c.filters, 'limit', filter_components.limit_slider, ['limit', limit])}
      </div>

    </div>
  </div>

  <div class="column data" id="topic-data">
    <div class="toolbar clear">
      <ul class="">
        <li>
          <a href="#" class="toolbar-trigger icon-link">
            <span class="add-icon">Add Type</span>
          </a>
        </li>
      </ul>
    </div>
    <div class="add-type toolbar-pane">
      <div class="column">
        <h3>Add a new Type to $c.object.name</h3>
        <form action="" method="post" name="add-type-form" class="add-type">
          <input type="" class="text-input" value="" placeholder="Start typing for suggestions..." name="" />
        </form>
      </div>
      <div class="column">
        <h3>Suggested Types:</h3>
      </div>
    </div>
    <acre:script>
      var structure = c.topic && c.topic.structure;
    </acre:script>
    <acre:block if="structure && structure.order">
      <acre:script>
        var order = structure.order;
      </acre:script>
      <acre:block for="domain_id in order">
        <acre:script>
          var domain_structure = structure.domains[domain_id];
        </acre:script>
        ${domain_section(domain_id, domain_structure)}
      </acre:block>   
    </acre:block>
  </div>

</acre:block>

<acre:block def="footer_script()">
  <script src="topic.mf.js"></script>
</acre:block>

<acre:block def="domain_section(id, structure)">
  <div class="section domain domain-section">  
    <div class="header">
      <span class="status">${_('Freebase Commons')}</span>
      <h1 class="kbs">
        <span class="mark"><a href="${h.fb_url(id)}">${structure.text}</a></span>
      </h1>
    </div>    
    <acre:block for="type_id in structure.types">
      <acre:script>
        var type_structure = c.topic.structure.types[type_id];
      </acre:script>
      ${type_section(type_id, type_structure)}
    </acre:block>   
  </div>
</acre:block>

<acre:block def="type_section(id, structure)">
  <div class="type-section">
    <div class="header">
      <h2 class="foobar kbs">
        <span class="mark"><a title="${id}" href="${h.fb_url(id)}">${structure.text}</a></span>
        <span class="key">${id}</span>
      </h2>
    </div>
    <acre:block for="property_id in structure.properties">
      <acre:script>
        var property = c.topic.properties[property_id];
      </acre:script>
      ${property_section(property_id, property)}
    </acre:block>
  </div>
</acre:block>

<acre:block def="property_section(id, property)">
  <div class="property-section">
    <h3 class="sub-foobar kbs">
      <!--view all link is shown for any non-unique property-->
      <a href="#" class="more"><span>${_('View all property values')}</span></a>
      <span class="sub-foobar-label">
        <span class="mark">${property.text}</span>
        <a href="javascript:void(0);" class="menu-trigger">Actions</a>
      </span>
      <ul class="tooltip row-menu">
        <li class="row-menu-item">
          <a href="#">Add new value</a>
        </li>
        <li class="row-menu-item">
          <a href="#">Inspect Property</a>
        </li>
        <li class="row-menu-item">
          <a href="#">View schema</a>
        </li>
      </ul>
    </h3>  
    <div class="list-section">
      <acre:block if="property.properties && property.properties.length">      
       ${property_table(id, property, true)}
      </acre:block>
      <acre:block else="">
        ${property_list(id, property, true)}
      </acre:block>
    </div>
  </div>
</acre:block>

<acre:block def="property_table(id, property, kbs)">
  <table class="data-table">
    <thead>
      <tr>
        <th acre:for="subproperty in property.properties" scope="col">
          ${subproperty.text}
        </th>
      </tr>
    </thead>
    <tbody>
      <tr acre:for="value in property.values" acre:attrs="kbs ? {'class':'kbs'} : {}">
        <acre:block for="i,subproperty in property.properties">
          <td>
            ${property_list(subproperty.id, value[subproperty.id])}
            <span acre:if="kbs && i === 0" class="menu-trigger">
              <a href="javascript:void(0)" class="default-action edit-action">
                edit
              </a>
              <a href="javascript:void(0)" class="more-action">
                menu
              </a>
            </span>
          </td>
        </acre:block>
      </tr>
    </tbody>
  </table>
</acre:block>

<acre:block def="property_list(id, property, kbs)">
  <acre:block if="property && property.values && property.values.length">
    <ul class="data-list">
      <li acre:for="value in property.values" acre:attrs="kbs ? {'class':'kbs'} : {}">
        ${property_value(value, property)}
        <span acre:if="kbs" class="menu-trigger">
          <a href="javascript:void(0)" class="default-action edit-action">
            edit
          </a>
          <a href="javascript:void(0)" class="more-action">
            menu
          </a>
        </span>
      </li>
    </ul>  
  </acre:block>
  <acre:block else="">
    <div class="empty-property">-</div>
  </acre:block>
</acre:block>

<acre:block def="property_value(value, property)">
  <acre:block if="value">
    <acre:block if="value.url && value.id">
      <span class="wrapper"><a title="${value.id}" href="${h.fb_url(value.id)}">${value.text}</a></span>
    </acre:block>
    <acre:block else="">
      <span class="wrapper">${value.text}</span>
    </acre:block>
  </acre:block>

  <acre:block else="">
    <span class="empty-property">-</span>
  </acre:block>

</acre:block>
