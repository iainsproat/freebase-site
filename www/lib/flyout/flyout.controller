var h = acre.require("helper/helpers.sjs");
var validators = acre.require("validator/validators.sjs");
var apis = acre.require("promise/apis.sjs");
var freebase = apis.freebase;
var deferred = apis.deferred;
var t = acre.require("flyout/flyout.mjt");


var SPEC = {
    validate: function(params) {
        if (params.object && !params.id) {
            // came from object routing (@see site/router.sjs)
            params.id = params.object.id;
        }
        return [
            validators.MqlId(params, "id", {required:true}),
            validators.LangId(params, "lang", {if_empty:"/lang/en"}),
            validators.Jsonp(params, "callback", {if_empty:null})            
        ];
    },

    run: function(id, lang, callback) {
        return freebase.get_topic(id, {
            lang: h.lang_code(lang),
            filter: ["suggest", "/common/topic/image"]
        })
        .then(function(r) {
            var name = id;
            var article = "";
            var image = false;
            var notable_props = [];
            var notable_types = [id];

            if (r.property) {
                // name
                if (r.property["/type/object/name"]) {
                    name = r.property["/type/object/name"].values[0].text;
                }

                // article
                if (r.property["/common/topic/article"]) {
                    article = r.property["/common/topic/article"].values[0].text;
                }

                // image
                if (r.property["/common/topic/image"]) {
                    image = true;
                }                

                // notable (disambiguating) properties
                var props = r.property["/synthetic/notability/notable_properties"];
                if (props && props.values) {
                    // notability properties is in reverse order
                    props.values.reverse();                    
                    props.values.forEach(function(prop) {
                        // skip CVTs
                        if (prop.property["/synthetic/notable_for/property"].type !== "compound") {
                            var prop_id = prop.property["/synthetic/notable_for/property"].values[0].id;
                            if (r.property[prop_id]) {
                                // The Topic API sometimes returns mids as property ids
                                // (internal bug filed).
                                var prop_value = r.property[prop_id].values[0].text;
                                notable_props.push([prop_id, prop_value]);
                            }
                        }
                    });
                }

                // notable types
                var types = r.property["/synthetic/notability/notable_types"];
                if (types && types.values) {
                    notable_types = types.values.map(function(t) {
                        return t.text;
                    }).slice(0, 3); // just get the first 3 notable types
                }
            }

            // this is the flyout summary
            return {
                name: name,
                article: article,
                image: image,
                notable_props: notable_props,
                notable_types: notable_types
            };            
        })
        .then(function(summary) {
            if (callback) {
                acre.response.set_header('content-type', 'text/javascript; charset=utf-8');
                var json = {
                    id: id,
                    html: acre.markup.stringify(t.render_flyout(id, lang, summary))
                };
                var str = [
                    "/** this is jsonp **/ ",
                    callback,
                    "(",
                    JSON.stringify(json),
                    ");"
                ];
                acre.write(str.join(""));
                return acre.exit();
            }
            else {
                acre.response.set_header('content-type', 'text/html');
                return {
                    template: "flyout/flyout.mjt",
                    def: "render_flyout",
                    def_args: [id, lang, summary]
                };
            }
        });
    }
};


