<acre:script>
  var h = acre.require("lib/helper/helpers.sjs");
  var i18n = acre.require("lib/i18n/i18n.sjs");
  var _ = i18n.gettext;
  var form = acre.require("lib/propbox/form.mjt");
</acre:script>

<acre:block def="add_key_form(id, authorities)">
  <tbody>
    <tr class="edit-row-head">
      <td colspan="5">
        ${form.row_msg(_("Add a new key to this Topic"))}
      </td>
    </tr>
    <tr class="edit-row">
      <td colspan="5">
        <div class="form-field">
          <label>
            <span class="form-label">${_('Authority/Namespace')}</span>
            <select name="namespace" data-placeholder="${_('Choose')}&hellip;">
              <option></option>
              <acre:block for="authority in authorities">
                <optgroup label="${i18n.display_name(authority)}">
                  <acre:block for="namespace in authority.ns">
                    <option value="${namespace.id}">${namespace.id}</option>
                  </acre:block>
                </optgroup>
              </acre:block>
            </select>
          </label>
        </div>
        <div class="form-field">
          <label>
            <span class="form-label">${_('Key')}</span>
            <input name="key" type="text" class="text-input"/>
            <span class="key-status"></span>
          </label>
        </div>
      </td>
    </tr>
    <tr class="edit-row-submit">
      <td colspan="5">
        <input type="hidden" name="s" value="${id}"/>
        <input type="hidden" name="p" value="/type/object/key"/>
        <input type="hidden" name="lang" value="${h.lang_code(i18n.lang)}"/>
        ${form.submit_buttons()}
      </td>
    </tr>
  </tbody>
</acre:block>

<acre:block def="edit_key_form(id, key)">
  <tbody>
    <tr class="edit-row-head">
      <td colspan="5">
        ${form.row_msg(_("Edit key"))}
      </td>
    </tr>
    <tr class="edit-row">
      <td colspan="5">
        <div class="form-field">
          <label>
            <span class="form-label">${_('Key')}</span>
            <input type="text" name="key" value="${key.value}" class="text-input"/>
            <span class="key-status"></span>
          </label>
        </div>
        <div class="form-field">
          <label>
            <span class="form-label">${_('Namespace')}</span>
            <input type="text" name="namespace"
                   class="text-input"
                   data-unique="${key.unique === true}"
                   value="${key.namespace}" class="text-input" disabled="disabled"/>
          </label>
        </div>
        <div acre:if="key.authority" class="form-field">
          <label>
            <span class="form-label">${_('Authority')}</span>
            <input type="text"
                   class="text-input"
                   name="authority"
                   value="${i18n.display_name(key.authority)}"
                   disabled="disabled"/>
          </label>
        </div>
      </td>
    </tr>
    <tr class="edit-row-submit">
      <td colspan="5">
        <input type="hidden" name="s" value="${id}"/>
        <input type="hidden" name="p" value="/type/object/key"/>
        <input type="hidden" name="lang" value="${h.lang_code(i18n.lang)}"/>
        ${form.submit_buttons()}
      </td>
    </tr>
  </tbody>
</acre:block>


<acre:block def="deleted_key(undo_data, namespace, value)">
  <tr class="edit-row-head row-msg row-msg-info">
    <td colspan="5">
      <acre:script>
        var msg = h.sprintf(_("%(value)s has been removed from %(namespace)s."), {namespace:namespace, value:value});
      </acre:script>
      ${form.row_msg(msg, ".edit-row-head")}
    </td>
  </tr>
</acre:block>
