<acre:script>
  var h = acre.require("helper/helpers.sjs");
  var i18n = acre.require("i18n/i18n");
  var _ = i18n.gettext;
</acre:script>

<!!--
  @param type_id - e.g., /type/datetime, /type/text, etc.
    For topics use any type.
    For enumerated types, use /freebase/type_hints/enumeration property id
!!-->
<acre:block def="fb_input(type_id, value, attrs)">
  <acre:script>
    var type = h.fb_input_type(type_id);
  </acre:script>
  <span acre:if="type === 'enumerated'" class="data-input">
    <select class="fb-enumerated-input" name="">
      <option value="">Lorem ipsum</option>
      <option value="">Bar</option>
      <option value="">Dude</option>
    </select>
  </span>
  <span acre:elif="type === 'boolean'" class="data-input">
    <label><input type="radio" name="foobar" class="fb-boolean-input "/> Yes</label>
    <label><input type="radio" name="foobar" class="fb-boolean-input "/> No</label>
  </span>
  <span acre:else="" class="data-input ${type}">
    <input class="fb-input" type="text" value="${value == null ? '' : value}">
  </span>
</acre:block>
