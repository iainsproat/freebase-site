<acre:script>
    var c = this.exports.c = {};
    var helper = acre.require("lib/helper/helpers.sjs");
    var i18n = acre.require("lib/i18n/i18n.sjs");
    var i18n_c = acre.require("lib/i18n/components.mjt");
    var _ = i18n.gettext;
    var propboxForm = acre.require("lib/propbox/form.mjt");
</acre:script>

<acre:block def="head()">
    <link rel="stylesheet" type="text/css" href="queue.mf.css" />
</acre:block>

<acre:block def="content()">

    <div class="queue-header">
        <div class="queue-back-button">${propboxForm.cancel_button("Back")}</div>
        <div class="queue-forward-button">${propboxForm.cancel_button("Forward")}</div>        
        <div class="queue-header-center">
            <span class="queue-header-message" id="queue-header-message">${_("Loading...")}</span>
            <span class="queue-header-status vote-status"></span>            
        </div>               
    </div>
    <div id="storage">
    </div>
    <div id="complete" class="queue-message" style="visibility: hidden;">
        ${_("You have completed voting on all flags in this category!")}
    </div>
    <div id="errormsg" class="queue-message" style="visibility: hidden;">
        ${_("Well, this is embarrassing! We're having some problems and working to resolve them.")}
    </div>
    <div id="parameters" style="visibility: hidden;">
        ${JSON.stringify(c.params)}
    </div>

    <div id="linking" style="visibility: hidden;">
        <input class="text-input" type="hidden" id="queue-link-list" value="${helper.legacy_fb_url('/review/queue', '?flags=')}"/>
        <div id="queue-link-to-flag" class="modal">
            <div class="modal-inner">
                <h1 class="modal-title">
                    <span>${_("Link to this flag in review.")}
                </h1>
                <div class="modal-content">
                    <div class="form-group clear">
                        <div class="form-row form-row-inline">
                            <label class="form-label">${_("Copy and share this url")}</label>
                            <input class="text-input" type="text" id="link-text" value=""/>                        
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-buttons">            
                ${propboxForm.cancel_button(_("Close"))}
            </div>
        </div>
    </div>   
</acre:block>

<acre:block def="footer_script()">    
    <script type="text/javascript" src="queue.mf.js" />    
</acre:block>



