var h = acre.require("lib/helper/helpers.sjs");
var validators = acre.require("lib/validator/validators.sjs");
var queries = acre.require("queries.sjs");


var SPEC = {

  method: "POST",

  auth: true,

  validate: function(params) {
    var args = [
      params.auth_user.id,
      validators.Json(params, "query", {required:true}),
      validators.String(params, "name", {required:true}),
      validators.MqlKey(params, "key", {required:true}),
      validators.MqlId(params, "domain", {required:true}),
      validators.String(params, "description", {if_missing:null}),
      validators.LangId(params, "lang", {if_empty:"/lang/en"})
    ];
    return args;
  },

  run: function(user_id, query, name, key, domain, description, lang) {
    return queries.create_query(user_id, query, name, key, domain, description, lang)
      .then(function(query) {
        return {
          "url": h.fb_url(query.id)
        };
      });
  }
};
